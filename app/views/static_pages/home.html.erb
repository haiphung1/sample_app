<% provide :title, t("static_pages.home") %>
<div class="container mt-3">
  <% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="micropost_form">
          <%= render "shared/micropost_form" %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3 class="ml-5"><%= t "micropost.micropost_feed" %></h3>
        <%= render "shared/feed" %>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1><%= t "static_pages.sample_app" %></h1>
        <p>
          <%= t "static_pages.title_home" %>
          <%= link_to t("static_pages.rails"), Settings.url.rails_tutorial %>
        </p>
      </div>
    </div>
  <% end %>
</div>
