<% provide :title, t("mailer.password_reset") %>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <h1><%= t "mailer.password_reset" %></h1>
      <%= f.label :password, t("auth.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("auth.confirm_password") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("mailer.update_password"), class: "btn btn-primary mt-2" %>
    <% end %>
  </div>
</div>
