<% provide :title, t("static_pages.edit") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="text-center"><%= t "static_pages.update_profile" %></h1>
      <%= form_for @user do |f| %>
        <%= render partial: "error", locals: {user: @user} %>
        <div class="form-group">
          <%= f.label t "auth.name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t "auth.email" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t "auth.password" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t "auth.confirm_password" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit t("static_pages.save_changes"), class: "btn-lg btn-block btn btn-primary text-center" %>
        </div>
      <% end %>
      <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <%= link_to  t("static_pages.change"), "http://gravatar.com/emails", target: "_blank" %>
      </div>
    </div>
  </div>
</div>
