<% provide :title, t("auth.login") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center"><%= t "auth.login" %></h2>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.label :email, t("auth.email") %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, t("auth.password") %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit t("auth.login"), class: "btn-lg btn-block btn btn-primary text-center" %>
        </div>
      <% end %>
      <p><%= t "static_pages.new_user" %> <%= link_to t("static_pages.signup_now"), signup_path %></p>
    </div>
  </div>
</div>
